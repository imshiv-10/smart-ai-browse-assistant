{
  "manifest_version": 2,
  "name": "Smart Browse Assistant",
  "description": "AI-powered webpage summaries and product comparisons",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Smart Browse Assistant"
  },
  "sidebar_action": {
    "default_panel": "src/sidepanel/index.html",
    "default_title": "Smart Browse Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "scripts": ["src/background/index.ts"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/extractor.ts"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "icons/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "smart-browse-assistant@example.com",
      "strict_min_version": "109.0"
    }
  }
}
